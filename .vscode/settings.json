{
  "editor.rulers": [80],
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },

  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "dist": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  "typescript.preferences.quoteStyle": "single",
  "eslint.run": "onSave",
  "eslint.nodePath": "./node_modules",
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#505762",
    "activityBar.background": "#505762",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#48182a",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#505762",
    "statusBar.background": "#393e46",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#505762",
    "statusBarItem.remoteBackground": "#393e46",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#393e46",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#393e4699",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#393e46"
}
